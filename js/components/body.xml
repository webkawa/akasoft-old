<?xml version="1.0" encoding="UTF-8"?>
<component xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../framework/ressources/models/components.xsd"
         name="Body" 
         type="classic" >
    <selectors>
        <selector id="left">div.left</selector>
        <selector id="center">div.center</selector>
        <selector id="centerBackground">div.center > div.background</selector>
        <selector id="centerFrame">div.center > div.frame</selector>
        <selector id="right">div.right</selector>
    </selectors>
    <trajectories>
        <trajectory name="Open">
            <speed>1000</speed>
            <easing>easeOutQuart</easing>
            <move>
                <property>height</property>
                <from>0%</from>
                <to>100%</to>
            </move>
            <move>
                <property>width</property>
                <from>0%</from>
                <to>100%</to>
            </move>
        </trajectory>
    </trajectories>
    <loader>
        <dom>
            <![CDATA[
                <div class="center">
                    <div class="background" />
                    <div class="frame" />
                </div>
                <div class="left" />
                <div class="right" />
            ]]>
        </dom>
        <action call="class">
            <parameter>left</parameter>
            <parameter>positionAbsolute width64px leftNo</parameter>
        </action>
        <action call="class">
            <parameter>center</parameter>
            <parameter>positionAbsolute marginH32px marginV32px</parameter>
        </action>
        <action call="class">
            <parameter>centerBackground</parameter>
            <parameter>positionAbsolute height100per width100per radius8px opacity02 backgroundWhite border1px border444</parameter>
        </action>
        <action call="class">
            <parameter>centerFrame</parameter>
            <parameter>positionAbsolute height100per width100per</parameter>
        </action>
        <action call="class">
            <parameter>right</parameter>
            <parameter>positionAbsolute width64px rightNo</parameter>
        </action>
        <action call="realHeight">
            <parameter>left</parameter>
        </action>
        <action call="realHeight">
            <parameter>center</parameter>
        </action>
        <action call="realWidth">
            <parameter>center</parameter>
        </action>
        <action call="realHeight">
            <parameter>right</parameter>
        </action>
        <action call="center">
            <parameter>center</parameter>
        </action>
        <to>Ready</to>
    </loader>
    <state id="Ready">
        <selectors>
            <selector id="openLN">div.left > div.cpnLeftLink.atOpen</selector>
        </selectors>
        <in from="@None">
            <target>centerBackground</target>
            <pre call="loadNavigation" />
            <animation base="Open">
                <progress call="center">
                    <parameter>centerBackground</parameter>
                </progress>
                <move>
                    <property>opacity</property>
                    <from>0</from>
                    <goal call="css">
                        <parameter>centerBackground</parameter>
                        <parameter>opacity</parameter>
                    </goal>
                    <to>1</to>
                </move>
            </animation>
            <post call="go" on="Navigable">
                <parameter>home</parameter>
            </post>
        </in>
    </state>
</component>