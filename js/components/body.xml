<?xml version="1.0" encoding="UTF-8"?>
<component xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../framework/ressources/models/components.xsd"
         name="Body" 
         type="classic" >
    <selectors>
        <selector id="left">div.left</selector>
        <selector id="center">div.center</selector>
        <selector id="frame">div.center > div</selector>
        <selector id="right">div.right</selector>
    </selectors>
    <trajectories>
        <trajectory name="Open">
            <speed>1000</speed>
            <easing>easeOutQuart</easing>
            <move>
                <property>height</property>
                <from>0%</from>
                <to>100%</to>
            </move>
            <move>
                <property>width</property>
                <from>0%</from>
                <to>100%</to>
            </move>
            <move>
                <property>opacity</property>
                <from>0</from>
                <to>0.5</to>
            </move>
        </trajectory>
    </trajectories>
    <loader>
        <dom>
            <![CDATA[
                <div class="center">
                    <div />
                </div>
                <div class="left" />
                <div class="right" />
            ]]>
        </dom>
        <action call="class">
            <parameter>left</parameter>
            <parameter>positionAbsolute width64px leftNo</parameter>
        </action>
        <action call="class">
            <parameter>center</parameter>
            <parameter>positionAbsolute marginH32px marginV32px</parameter>
        </action>
        <action call="class">
            <parameter>frame</parameter>
            <parameter>radius8px opacity05 backgroundWhite</parameter>
        </action>
        <action call="class">
            <parameter>right</parameter>
            <parameter>positionAbsolute width64px rightNo</parameter>
        </action>
        <action call="realHeight">
            <parameter>left</parameter>
        </action>
        <action call="realHeight">
            <parameter>center</parameter>
        </action>
        <action call="realWidth">
            <parameter>center</parameter>
        </action>
        <action call="realHeight">
            <parameter>right</parameter>
        </action>
        <action call="center">
            <parameter>center</parameter>
        </action>
        <to>Ready</to>
    </loader>
    <state id="Ready">
        <selectors>
            <selector id="openLN">div.left > div.cpnLeftLink.atOpen</selector>
        </selectors>
        <in from="@None">
            <target>frame</target>
            <pre call="loadNavigation" />
            <animation base="Open">
                <progress call="center">
                    <parameter>frame</parameter>
                </progress>
            </animation>
        </in>
    </state>
</component>