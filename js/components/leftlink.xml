<?xml version="1.0" encoding="UTF-8"?>
<component xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../framework/ressources/models/components.xsd"
         name="LeftLink" 
         type="classic" >
    <selectors>
        <selector id="icon">img</selector>
        <selector id="wrapper">div</selector>
        <selector id="title">div > h1</selector>
        <selector id="description">div > p</selector>
        <selector id="hover">img, div</selector>
    </selectors>
    <trajectories>
        <trajectory name="Deploy">
            <speed>750</speed>
            <easing>easeInOutQuad</easing>
            <move>
                <property>margin-left</property>
                <from>640px</from>
                <goal call="css">
                    <parameter>$SELF</parameter>
                    <parameter>margin-left</parameter>
                </goal>
                <to>0</to>
            </move>
            <move>
                <property>opacity</property>
                <from>0</from>
                <to>1</to>
            </move>
        </trajectory>
        <trajectory name="Open">
            <speed>320</speed>
            <easing>easeOutQuint</easing>
            <move>
                <property>opacity</property>
                <from>0</from>
                <to>1</to>
            </move>
            <move>
                <property>width</property>
                <from>32</from>
                <goal call="css">
                    <parameter>wrapper</parameter>
                    <parameter>width</parameter>
                </goal>
                <to>32</to>
            </move>
        </trajectory>
        <trajectory name="Close">
            <speed>320</speed>
            <easing>easeOutQuint</easing>
            <move>
                <property>opacity</property>
                <from>1</from>
                <to>0</to>
            </move>
            <move>
                <property>width</property>
                <to>32</to>
            </move>
        </trajectory>
        <trajectory name="Select">
            <speed>320</speed>
            <easing>easeOutCubic</easing>
            <move clean="false">
                <property>background-color</property>
                <goal call="get">
                    <parameter>altcolor</parameter>
                </goal>
                <to>black</to>
            </move>
        </trajectory>
        <trajectory name="Deselect">
            <speed>320</speed>
            <easing>easeOutCubic</easing>
            <move clean="false">
                <property>background-color</property>
                <goal call="get">
                    <parameter>color</parameter>
                </goal>
                <to>white</to>
            </move>
        </trajectory>
    </trajectories>
    <loader>
        <dom>
            <![CDATA[
                <div>
                    <h1 />
                    <p />
                </div>
                <img />
            ]]>
        </dom>
        <action call="class">
            <parameter>$SELF</parameter>
            <parameter>positionRelative width64px height64px marginV8px</parameter>
        </action>
        <action call="class">
            <parameter>icon</parameter>
            <parameter>positionAbsolute radius8px</parameter>
        </action>
        <action call="class">
            <parameter>wrapper</parameter>
            <parameter>displayNone positionAbsolute leftM4px topM4px radius8px overflowHidden colorWhite</parameter>
        </action>
        <action call="class">
            <parameter>title</parameter>
            <parameter>width360px marginH8px marginL96px fontBold</parameter>
        </action>
        <action call="class">
            <parameter>description</parameter>
            <parameter>width360px marginH4px marginL96px</parameter>
        </action>
        <to>Close</to>
    </loader>
    <state id="Close">
        <trigger bind="mousemove">
            <target>icon</target>
            <action call="go">
                <parameter>Open</parameter>
            </action>
        </trigger>
        <in from="@None">
            <target>$SELF</target>
            <animation base="Deploy" />
        </in>
    </state>
    <state id="Open">
        <in from="Close">
            <target>wrapper</target>
            <pre call="start" on="Hoverable" />
            <pre call="class">
                <parameter>wrapper</parameter>
                <parameter>displayNone</parameter>
            </pre>
            <animation base="Open" />
        </in>
        <in>
            <target>icon</target>
            <animation base="Select" />
        </in>
        <begin call="check" on="Hoverable" />
        <out to="Close">
            <target>wrapper</target>
            <animation base="Close" />
            <post call="class">
                <parameter>wrapper</parameter>
                <parameter>displayNone</parameter>
            </post>
        </out>
        <out>
            <target>icon</target>
            <animation base="Deselect" />
        </out>
    </state>
</component>